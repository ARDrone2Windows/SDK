                    <TextBlock Grid.Row="0"
                               Grid.RowSpan="5"
                               Grid.Column="0"
                               Grid.ColumnSpan="4"
                               FontSize="18"
                               Text="ALTITUDE"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Left"
                               Style="{StaticResource OneStyle}"
                               RenderTransformOrigin="0,1">
                        <TextBlock.RenderTransform>
                            <CompositeTransform Rotation="-90"
                                                TranslateX="25"
                                                TranslateY="-36"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <Slider Grid.Row="1"
                            Grid.RowSpan="3"
                            Grid.Column="0"
                            Value="{Binding NavigationDataViewModel.Altitude, Converter={StaticResource StringToFloatConverter}}"
                            Style="{StaticResource ThreeStyle}"
                            Minimum="0"
                            Maximum="10000"
                            StepFrequency="100"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Right"
                            Margin="0,10"
                            Width="30"
                            Height="NaN"
                            Orientation="Vertical" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Grid.ColumnSpan="4"
                               Text="{Binding NavigationDataViewModel.Altitude}"
                               FontSize="18"
                               Margin="14,0,0,0"
                               HorizontalAlignment="Left"
                               Style="{StaticResource TwoStyle}" />
                    <!--Text="{Binding NavigationDataViewModel.Altitude}"-->

                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Text="YAW"
                               Style="{StaticResource OneStyle}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Style="{StaticResource TwoStyle}"
                               Text="{Binding NavigationDataViewModel.Yaw}" />
                    <Slider Grid.Row="1"
                            Grid.Column="2"
                            Value="{Binding NavigationDataViewModel.Yaw, Converter={StaticResource StringToFloatConverter}}"
                            Style="{StaticResource ThreeStyle}"
                            Minimum="-3.1415"
                            Maximum="3.1415"
                            StepFrequency=".01" />

                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Style="{StaticResource OneStyle}"
                               Text="PITCH" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Style="{StaticResource TwoStyle}"
                               Text="{Binding NavigationDataViewModel.Pitch}" />
                    <Slider Grid.Row="2"
                            Grid.Column="2"
                            Value="{Binding NavigationDataViewModel.Pitch, Converter={StaticResource StringToFloatConverter}}"
                            Minimum="-3.1415"
                            Maximum="3.1415"
                            StepFrequency=".01"
                            Style="{StaticResource ThreeStyle}" />

                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               Text="ROLL"
                               Style="{StaticResource OneStyle}" />
                    <Slider Grid.Row="3"
                            Grid.Column="2"
                            Value="{Binding NavigationDataViewModel.Roll, Converter={StaticResource StringToFloatConverter}}"
                            Minimum="-3.1415"
                            Maximum="3.1415"
                            StepFrequency=".01"
                            Style="{StaticResource ThreeStyle}" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               Text="{Binding NavigationDataViewModel.Roll}"
                               Style="{StaticResource TwoStyle}" />

                </Grid>
            </Grid>
        </Popup>
